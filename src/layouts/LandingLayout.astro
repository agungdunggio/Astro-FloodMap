---
// src/layouts/LandingLayout.astro
export interface Props {
    title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> {/* Pastikan favicon.svg ada di public/ */}
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script is:inline src="https://cdn.tailwindcss.com"></script>
    
    <script is:inline src="https://cdn.jsdelivr.net/npm/three@0.132.2/build/three.min.js"></script>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <link rel="stylesheet" href="/src/style/landing-style.css">
</head>
<body class="text-white min-h-screen"> {/* Class Tailwind untuk dasar */}
    <slot /> </body>
</html>

<style is:global>
    /* Style global minimal untuk memastikan body bisa scroll jika konten panjang */
    /* Sebagian besar style akan ada di landing-style.css */
    html {
        scroll-behavior: smooth;
    }
    body {
        /* Background dipindahkan ke #canvas-container di landing-style.css */
        /* overflow-x: hidden; sudah ada di landing-style.css */
    }
</style>